<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dl"
    >
    <!-- NavBar tutorial: https://www.youtube.com/watch?v=0WC0VU0hw2w-->





        <ScrollView
            android:layout_width="368dp"
            android:layout_height="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    app:srcCompat="@mipmap/ic_launcher_round"
                     />

                <TextView
                    android:id="@+id/textViewCourseCode"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="COMP10280"
                    android:textAlignment="center"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif"
                    android:textColor="#283845"
                    />

                <TextView
                    android:id="@+id/textViewCourseName"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="Introduction to Programming"
                    android:textAlignment="center"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif"
                    tools:text="Introduction to Programming"
                    android:textColor="#283845"/>

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="#283845"
                    android:background="?android:attr/listDivider"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/enrolButton"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableEnd="@drawable/ic_favorite_border_black_24dp"
                    android:gravity="center_horizontal"
                    android:text="Enrol Me"
                    app:fontFamily="sans-serif"
                    android:tint="#E8B4BC"
                    android:textColor="#F2D492"
                    app:backgroundTint="#283845"/>
                <!-- button tutorial: https://abhiandroid.com/ui/button-->


                <TextView
                    android:id="@+id/ViewAssignments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d3d3d3"
                    android:layout_marginTop="8dp"
                    android:padding="4dp"
                    android:text="Assignments"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif"
                    android:textColor="#283845"/>

                <TextView
                    android:id="@+id/SelectAssignments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Search Assignments"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    app:fontFamily="sans-serif"
                    android:textColor="#283845"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="15dp"
                    android:textColor="#283845"
                    android:textSize="20sp"
                    app:fontFamily="sans-serif"
                    >

                </android.support.v7.widget.AppCompatSpinner>
                <!-- Spinner tutorial: https://www.youtube.com/watch?v=NoSri0OSOaA-->


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/assignmentFragButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:text="Add Assignment"
                    app:fontFamily="sans-serif"
                    android:textColor="#F2D492"
                    app:backgroundTint="#283845"/>

                <FrameLayout
                    android:id="@+id/placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp">
                </FrameLayout>

                <TextView
                    android:id="@+id/courseMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d3d3d3"
                    android:layout_marginTop="8dp"
                    android:padding="4dp"
                    android:text="Course Members"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif"
                    android:textColor="#283845"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/memberSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="textStart"
                    android:padding="15dp"
                    android:textColor="#283845"
                    android:textSize="20sp"
                    android:entries="@array/member_names"
                    app:fontFamily="sans-serif"
                    >

                </android.support.v7.widget.AppCompatSpinner>

                <TextView
                    android:id="@+id/MessageGmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Message a Member"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    app:fontFamily="sans-serif"
                    android:textColor="#283845"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/openGmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="open gmail"
                    app:fontFamily="sans-serif"
                    android:textColor="#F2D492"
                    app:backgroundTint="#283845"/>

                <TextView
                    android:id="@+id/DiscussionForum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d3d3d3"
                    android:layout_marginTop="8dp"
                    android:padding="4dp"
                    android:text="Discussion Forum"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif"
                    android:textColor="#283845"/>

                <TextView
                    android:id="@+id/SelectTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Search Topics"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    app:fontFamily="sans-serif"
                    android:textColor="#283845"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/ForumSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:entries="@array/forum_list"
                    app:fontFamily="sans-serif"
                    android:textColor="#283845"
                    android:padding="15dp"
                    android:textSize="20sp">
                </android.support.v7.widget.AppCompatSpinner>
                <!-- Spinner tutorial: https://www.youtube.com/watch?v=NoSri0OSOaA-->



                <!-- button tutorial: https://abhiandroid.com/ui/button-->

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/addForumTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:text="Add Forum Topic"
                    android:textColor="#F2D492"
                    app:backgroundTint="#283845"
                    app:fontFamily="sans-serif" />

                <FrameLayout
                    android:id="@+id/forumPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp">
                </FrameLayout>

            </LinearLayout>
        </ScrollView>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>
    <!-- NavBar tutorial: https://www.youtube.com/watch?v=0WC0VU0hw2w-->

</android.support.v4.widget.DrawerLayout>